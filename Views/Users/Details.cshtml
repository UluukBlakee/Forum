@model Forum.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-4">
        <img src="@Model.Avatar" alt="Avatar" class="img-fluid">
    </div>
    <div class="col-md-8">
        <h4>User Info</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                User Name:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-3">
                Почта:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                Количество сообщений:
            </dt>
            <dd class="col-sm-9">
                @Model.Answers.Count()
            </dd>
        </dl>
    </div>
</div>
